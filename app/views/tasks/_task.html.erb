<%= content_tag_for :li, task do %>
  <label>
    <%= check_box_tag "task_checkbox_#{task.id}".to_sym, "", false, class: "task_checkbox" %>
    <p class="body"><%= task.body %></p>
  </label>
  <div class="clear"></div>
  <%= link_to "Delete", task, method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this task?" }, class: "delete" %>
<% end %>